<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="hva.flashdiscount.fragment.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/layout_all_notifications"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="20dp"
        android:layout_height="wrap_content">

        <Switch
            android:id="@+id/switch_newsletter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/all_notifications"/>
    </LinearLayout>

    <View android:id="@+id/stripe"
        android:background="#000000"
        android:layout_below="@+id/layout_all_notifications"
        android:layout_width = "match_parent"
        android:layout_height="1dp"/>

    <ListView
        android:id="@+id/notification_list"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@+id/stripe"
        />


</RelativeLayout>
