<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:id="@+id/bottom_sheet"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="bottom"
                                            android:background="@color/wallet_bright_foreground_holo_dark"
                                            android:orientation="vertical"
                                            app:behavior_hideable="true"
                                            app:behavior_peekHeight="0dp"
                                            app:layout_behavior="@string/bottom_sheet_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/bottom_sheet_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#11ffffff"
                        android:paddingBottom="5dp">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_discount_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                app:cardBackgroundColor="?attr/colorPrimaryDark"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    >

                    <hva.flashdiscount.layout.RoundImageView
                        android:id="@+id/bottom_sheet_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="4dp"
                        android:adjustViewBounds="true"
                        android:maxWidth="40dp"
                        android:src="@drawable/ic_coffee"/>

                    <TextView
                        android:id="@+id/title_bottom_sheet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/bottom_sheet_icon"
                        android:text="Company Name"
                        android:textAppearance="?android:attr/textAppearance"
                        android:textColor="@color/colorWhite"
                        />

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title_bottom_sheet"
                        android:layout_toEndOf="@+id/bottom_sheet_icon"
                        android:text="Aanbieding"
                        android:textColor="@color/colorWhite"
                        />


                    <TextView
                        android:id="@+id/time_remaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="12 min"
                        android:textColor="@color/colorWhite"/>

                    <TextView
                        android:id="@+id/claims_remaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/time_remaining"
                        android:maxLines="1"
                        android:text="21/100"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorWhite"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                android:id="@+id/card_view_discount_detail"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_below="@+id/card_view_discount_parent"
                                                android:layout_margin="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp">

                    <View
                        android:id="@+id/separator"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:background="@color/textColorSecondary"/>

                    <LinearLayout
                        android:id="@+id/discount_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin">

                        <LinearLayout
                            android:id="@+id/claim_info_window"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/separator"
                            android:layout_weight="0.50"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/claims_left"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/claims_left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="200"
                                android:textColor="@color/colorAccent"/>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/separator"
                            android:layout_weight=".50"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/time_left"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/time_left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="53 min"
                                android:textColor="@color/colorAccent"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <ListView
            android:id="@+id/discount_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bottom_sheet_card"
            />


    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>