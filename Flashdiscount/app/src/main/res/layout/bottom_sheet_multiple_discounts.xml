<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                            android:orientation="vertical"
                                            android:id="@+id/bottom_sheet_multiple_discounts"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="match_parent"
                                            android:layout_height="250dp"
                                            app:behavior_hideable="true"
                                            app:behavior_peekHeight="0dp"
                                            android:layout_gravity="bottom"
                                            android:background="@color/wallet_bright_foreground_holo_dark"
                                            app:layout_behavior="@string/bottom_sheet_behavior"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/title_bottom_sheet_multiple"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/description_bottom_sheet_multiple"
            android:textSize="20dp"
            android:gravity="bottom"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:id="@+id/detail_view_button_bottom_sheet_multiple"
            android:layout_height="match_parent"
            android:src="@drawable/cast_ic_notification_play"/>




    </LinearLayout>


</android.support.v4.widget.NestedScrollView>