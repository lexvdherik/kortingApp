<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="4dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_discount_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <hva.flashdiscount.layout.RoundImageView
                android:id="@+id/list_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="40dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:src="@drawable/ic_coffee"/>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/half_margin"
                android:layout_marginTop="@dimen/half_margin"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                    <TextView
                        android:id="@+id/company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|top"
                        android:gravity="start|top"
                        android:ellipsize="end"
                        android:text="Company Name"
                        android:textAppearance="?android:attr/textAppearance"
                        />



                    <TextView
                        android:id="@+id/company_street"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|top"
                        android:gravity="start|top"
                        android:textSize="12sp"
                        android:textColor="@color/textColorSecondary"
                        android:ellipsize="end"
                        android:text="Company street"
                        android:textAppearance="?android:attr/textAppearance"
                        />


                <TextView
                    android:id="@+id/flextitel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:ellipsize="end"
                    android:gravity="start|top"
                    android:text="Aanbieding"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/remaining_items"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginBottom="@dimen/half_margin"
                android:layout_marginTop="@dimen/half_margin"
                android:gravity="end|center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/time_remaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end|top"
                    android:textAlignment="textEnd"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/list_hierarchy_indicator"
                    android:id="@+id/list_arrow_image" />

                <TextView
                    android:id="@+id/claims_remaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end|bottom"
                    android:maxLines="1"
                    android:textAlignment="textEnd"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>