<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingRight="5dp"
              android:paddingTop="5dp"
              android:paddingLeft="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view_discount_parent"
        app:cardElevation="6dp">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

            <hva.flashdiscount.layout.RoundImageView
                android:id="@+id/list_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:maxWidth="40dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_coffee" />

            <TextView
                android:id="@+id/time_remaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="14dp"/>
            <TextView
                android:id="@+id/claims_remaining"
                android:layout_below="@id/time_remaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="14dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:textAppearance="?android:attr/textAppearance"
                android:maxLines="5"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/list_icon"
                android:layout_toStartOf="@+id/time_remaining"
                android:textColor="@color/colorBlack"
                android:layout_marginStart="14dp"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
